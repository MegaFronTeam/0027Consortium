mixin sMediaItem(img)
	+e.col.col-6.col-lg-3
		+e.item(href=`img/sMedia-${img}.jpg` data-fancybox="sMedia")
			+img(`img/sMedia-${img}.jpg`, 'bg')


mixin sMedia(data)
	// start sMedia
	+b.sMedia.section#sMedia&attributes(attributes)
		.container
			+e.album
				+e.title
					h4: span Название альбома в&nbsp;одну или две строки
					+e.date 29.04.2022
				.row
					- for (var x = 0; x < 5; x++)
						+sMediaItem(1)
						+sMediaItem(2)
						+sMediaItem(3)
						+sMediaItem(4)
						+sMediaItem(5)
						+sMediaItem(6)
						+sMediaItem(7)
						+sMediaItem(8)

			+e.album
				+e.title
					h4: span Название альбома в&nbsp;одну или две строки
					+e.date 29.04.2022
				.row
					- for (var x = 1; x < 5; x++)
						+sMediaItem(x)

			+e.album
				+e.title
					h4: span Название альбома в&nbsp;одну или две строки для наглядности отображения длинных названий пример
					+e.date 29.04.2022
				.row
					- for (var x = 0; x < 3; x++)
						+sMediaItem(5)
						+sMediaItem(6)
						+sMediaItem(7)
						+sMediaItem(8)
						+sMediaItem(1)
						+sMediaItem(2)
						+sMediaItem(3)
						+sMediaItem(4)
			+e.btn-wrap.mt-0.justify-content-center
				+e.btn.btn.btn-primary(href="#") Показать еще
	// end sMedia